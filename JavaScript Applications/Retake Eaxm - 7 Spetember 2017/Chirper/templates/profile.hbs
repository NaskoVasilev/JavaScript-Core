{{>navigation}}
<section id="viewProfile">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>
            {{#if isFollowing}}
                <a id="btnFollow" class="chirp-author" href="#/unfollow/{{username}}">Unfollow</a>
            {{else}}
                <a id="btnFollow" class="chirp-author" href="#/follow/{{username}}">Follow</a>
            {{/if}}

            <div id="userProfileStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> | <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="profileChirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
                <article class="chirp">
                    <div class="titlebar">
                        <a href="#/profile/{{author}}" class="chirp-author">{{author}}</a>
                        <span class="chirp-time">{{date}}</span>
                    </div>
                    <p>{{text}}</p>
                </article>
            {{else}}
                <p>No chirps in database!</p>
            {{/each}}
        </div>
    </div>
</section>