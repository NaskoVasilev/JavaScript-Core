{{> navigation}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            {{> createChirpForm}}

            <div id="myStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> | <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            <div class="chirp">
                {{#each chirps}}
                    <article class="chirp">
                        <div class="titlebar">
                            <a href="#/profile/{{author}}" class="chirp-author">{{author}}</a>
                            <a href="#/delete/{{_id}}" class="chirp-time">delete</a>
                            <span class="chirp-time">{{date}}</span>
                        </div>
                        <p>{{text}}</p>
                    </article>
                {{else}}
                    <p>No chirps in database!</p>
                {{/each}}
            </div>
        </div>
    </div>
</section>